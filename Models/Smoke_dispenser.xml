<PropertyList>
    <path>Smoke_dispenser.ac</path>

	<model>
		<path>Aircraft/C-101/Models/Effects/Aerobatic-smoke.xml</path>
		<offsets>
			<x-m> 5.090</x-m>
			<y-m> 0.104</y-m>
			<z-m>-0.275</z-m>
			<pitch-deg>90</pitch-deg>
		</offsets>
	</model>

<animation>
	<type>select</type>
	<object-name>Dispensador_Humo</object-name>
	<condition>
		<property>sim/model/aerobatic-config</property>
	</condition>
</animation>

<effect>
	<inherits-from>Aircraft/C-101/Models/Effects/reflect_metal</inherits-from>
		<object-name>Dispensador_Humo</object-name>
</effect>

</PropertyList>